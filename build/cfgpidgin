#!/bin/bash

# Configure Pidgin.

# XXX: Ugly editing of Makefiles needed for X11 includes!
#
./configure --prefix=/usr/local/pidgin --disable-debug --disable-nls \
  --disable-static --enable-shared --with-gnu-ld --with-gnu-as \
  --disable-profile --enable-pch --enable-new-ldflags --with-alsa \
  --without-esd --disable-consoleui \
  --with-nspr-includes=/usr/local/mozilla/include \
  --with-nspr-libs=/usr/local/mozilla/lib --enable-plugins \
  --enable-nss=yes --with-nss-includes=/usr/local/mozilla/include \
  --with-nss-libs=/usr/local/mozilla/lib \
  --x-includes=/usr/X11R6/include --x-libraries=/usr/X11R6/lib
