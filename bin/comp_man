#!/usr/bin/env bash
# An OCD script to compress manual pages.
for i in 1  3  4x  6  8  m 2  4  5   7  9  n
do
    if [ -d "/usr/man/man${i}" ]
    then
        find "/usr/man/man${i}" -name "*.${i}" -type f \
            -exec sudo gzip -f -9 -v \{\} \;
    fi
done

for j in 1  2  3  4  5  6  7  8  9  n
do
    if [ -d "/var/man/cat${j}" ]
    then
        find "/var/man/cat${j}" -name "*.${j}" -type f \
            -exec sudo bzip2 -f -9 -v \{\} \;
    fi
done
